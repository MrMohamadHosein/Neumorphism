<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <soup.neumorphism.NeumorphButton
        app:neumorph_lightSource="leftBottom"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:padding="30dp"
        android:text="this is my first button view"
        app:neumorph_shadowElevation="5dp"
        app:neumorph_shapeAppearance="@style/neuButton"
        app:neumorph_shapeType="flat"
        app:neumorph_shadowColorDark="#B3000000"
        app:neumorph_backgroundColor="#1A1A1A"
        app:neumorph_shadowColorLight="#B33A3A3A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>